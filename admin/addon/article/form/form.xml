<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="edit">
		<fieldset name="editing">
			<field name="TidyRepair"
				default="0"
				type="radio"
				class="btn-group"
				label="COM_EZSET_ARTICLE_TIDY_REPAIR"
				description="COM_EZSET_ARTICLE_TIDY_REPAIR_DESC">
				<option value="1">JENABLED</option>
				<option value="0">JDISABLED</option>
			</field>
			<field name="ConfirmLeave"
				default="0"
				type="radio"
				class="btn-group"
				label="COM_EZSET_ARTICLE_CONFIRM_LEAVE"
				description="COM_EZSET_ARTICLE_CONFIRM_LEAVE_DESC">
				<option value="1">JENABLED</option>
				<option value="0">JDISABLED</option>
			</field>
			<field name="SaveFirstImage"
				default="0"
				type="radio"
				class="btn-group"
				label="COM_EZSET_ARTICLE_SAVE_FIRST_IMAGE"
				description="COM_EZSET_ARTICLE_SAVE_FIRST_IMAGE_DESC">
				<option value="1">JENABLED</option>
				<option value="0">JDISABLED</option>
			</field>
		</fieldset>

		<fieldset name="image_resize">
			<field name="AutoThumbnail"
				default="0"
				type="radio"
				class="btn-group"
				label="COM_EZSET_ARTICLE_AUTO_THUMB"
				description="COM_EZSET_ARTICLE_AUTO_THUMB_DESC">
				<option value="1">JENABLED</option>
				<option value="0">JDISABLED</option>
			</field>
			<field name="AutoThumbnail_LocalOnly"
				default="1"
				type="radio"
				class="btn-group"
				label="COM_EZSET_ARTICLE_AUTO_THUMB_LOCAL_ONLY"
				description="COM_EZSET_ARTICLE_AUTO_THUMB_LOCAL_ONLY_DESC">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
		</fieldset>
	</fields>

	<fields name="blog">
		<fieldset name="simple_layout">
			<field name="SimpleLayout"
				default="0"
				type="radio"
				class="btn-group"
				label="COM_EZSET_BLOG_SIMPLE_LAYOUT"
				description="COM_EZSET_BLOG_SIMPLE_LAYOUT_DESC">
				<option value="1">JENABLED</option>
				<option value="0">JDISABLED</option>
			</field>
			<field name="SimpleLayout_ImageWidth"
				default="150"
				type="text"
				label="COM_EZSET_BLOG_SIMPLE_LAYOUT_IMAGE_WIDTH"
				description="COM_EZSET_BLOG_SIMPLE_LAYOUT_IMAGE_WIDTH_DESC" />
			<field name="SimpleLayout_ImageCrop"
				default="0"
				type="radio"
				class="btn-group"
				label="COM_EZSET_BLOG_SIMPLE_LAYOUT_IMAGE_CROP"
				description="COM_EZSET_BLOG_SIMPLE_LAYOUT_IMAGE_CROP_DESC">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field name="SimpleLayout_DefaultImage"
				default=""
				type="media"
				class="btn-group"
				label="COM_EZSET_BLOG_SIMPLE_LAYOUT_DEFAULT_IMAGE"
				description="COM_EZSET_BLOG_SIMPLE_LAYOUT_DEFAULT_IMAGE_DESC"
			/>
			<field name="SimpleLayout_Summery_StripeHtml"
				default="0"
				type="radio"
				class="btn-group"
				label="COM_EZSET_BLOG_SIMPLE_LAYOUT_SUMMERY_STRIP_HTML"
				description="COM_EZSET_BLOG_SIMPLE_LAYOUT_SUMMERY_STRIP_HTML_DESC">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field name="SimpleLayout_Summery_AllowHtmlTags"
				type="text"
				filter="raw"
				label="COM_EZSET_BLOG_SIMPLE_LAYOUT_SUMMERY_STRIP_HTML_TAGS"
				description="COM_EZSET_BLOG_SIMPLE_LAYOUT_SUMMERY_STRIP_HTML_TAGS_DESC" />
			<field name="SimpleLayout_Summery_MaxLength"
				default="250"
				type="text"
				label="COM_EZSET_BLOG_SIMPLE_LAYOUT_SUMMERY_MAX_LENGTH"
				description="COM_EZSET_BLOG_SIMPLE_LAYOUT_SUMMERY_MAX_LENGTH_DESC" />
		</fieldset>
	</fields>

	<fields name="seo">
		<fieldset name="alias_translate">
			<field name="AliasTranslate"
				default="0"
				type="radio"
				class="btn-group"
				label="COM_EZSET_ARTICLE_TRAN_ALIAS"
				description="COM_EZSET_ARTICLE_TRAN_ALIAS_DESC">
				<option value="1">JENABLED</option>
				<option value="0">JDISABLED</option>
			</field>
			<field name="AliasTranslate_OriginLang"
				default=""
				type="text"
				label="COM_EZSET_ARTICLE_TRAN_ALIAS_ORIGIN_LANG"
				description="COM_EZSET_ARTICLE_TRAN_ALIAS_ORIGIN_LANG_DESC" />
			<field name="AliasTranslate_TargetLang"
				default=""
				type="text"
				label="COM_EZSET_ARTICLE_TRAN_ALIAS_TARGET_LANG"
				description="COM_EZSET_ARTICLE_TRAN_ALIAS_TARGET_LANG_DESC" />
			<field name="AliasTranslate_GoogleApiKey"
				default=""
				type="text"
				class="input-xlarge"
				label="COM_EZSET_ARTICLE_TRAN_ALIAS_GOOGLE_API_KEY"
				description="COM_EZSET_ARTICLE_TRAN_ALIAS_GOOGLE_API_KEY_DESC" />
		</fieldset>

		<fieldset name="seo_meta">
			<field name="SeoMeta"
				default="0"
				type="radio"
				class="btn-group"
				label="COM_EZSET_ARTICLE_SEO"
				description="COM_EZSET_ARTICLE_SEO_DESC">
				<option value="1">JENABLED</option>
				<option value="0">JDISABLED</option>
			</field>
			<field name="SeoMeta_TitleFix"
				default="{%TITLE%} | {%SITE%}"
				type="text"
				size="50"
				label="COM_EZSET_ARTICLE_SEO_TITLE_FIX"
				description="COM_EZSET_ARTICLE_SEO_TITLE_FIX_DESC" />
			<field name="SeoMeta_TitleFix_Separator"
				default="|"
				type="text"
				label="COM_EZSET_ARTICLE_SEO_TITLE_SEPARATOR"
				description="COM_EZSET_ARTICLE_SEO_TITLE_SEPARATOR_DESC" />
			<field name="SeoMeta_AutoGetMeta"
				default="0"
				type="radio"
				class="btn-group"
				label="COM_EZSET_ARTICLE_SEO_GET_META"
				description="COM_EZSET_ARTICLE_SEO_GET_META_DESC">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field name="SeoMeta_AutoGetMeta_Length"
				default="250"
				type="text"
				label="COM_EZSET_ARTICLE_SEO_GET_META_LENGTH"
				description="COM_EZSET_ARTICLE_SEO_GET_META_LENGTH_DESC" />
		</fieldset>
	</fields>

	<fields name="social">
		<fieldset name="opengraph">
			<field name="Opengraph"
				type="radio"
				class="btn-group"
				default="0"
				label="COM_EZSET_OPENGRAPH"
				description="COM_EZSET_OPENGRAPH_DESC">
				<option value="1">JENABLED</option>
				<option value="0">JDISABLED</option>
			</field>
			<field name="Opengraph_DefaultImage"
				type="media"
				directory="images"
				default=""
				label="COM_EZSET_OPENGRAPH_DEFAULT_IMAGE"
				description="COM_EZSET_OPENGRAPH_DEFAULT_IMAGE_DESC" />
			<field name="Opengraph_DefaultImage_HomeOnly"
				type="radio"
				class="btn-group"
				default="1"
				label="COM_EZSET_OPENGRAPH_DEFAULT_IMAGE_HOME_ONLY"
				description="COM_EZSET_OPENGRAPH_DEFAULT_IMAGE_HOME_ONLY_DESC">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field name="Opengraph_GetArticleImage"
				type="radio"
				class="btn-group"
				default="1"
				label="COM_EZSET_OPENGRAPH_GET_ARTICLE_IMAGE"
				description="COM_EZSET_OPENGRAPH_GET_ARTICLE_IMAGE_DESC">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field name="Opengraph_GetArticleImage_Max"
				type="number"
				default="1"
				class="input-small"
				label="COM_EZSET_OPENGRAPH_GET_ARTICLE_IMAGE_MAX"
				description="COM_EZSET_OPENGRAPH_GET_ARTICLE_IMAGE_MAX_DESC"
			/>
			<field name="Opengraph_OnlyTitle"
				type="radio"
				class="btn-group"
				default="1"
				label="COM_EZSET_OPENGRAPH_ONLY_TITLE"
				description="COM_EZSET_OPENGRAPH_ONLY_TITLE_DESC">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field name="Opengraph_AdminID"
				default=""
				type="text"
				size="30"
				label="COM_EZSET_OPENGRAPH_ADMIN_ID"
				description="COM_EZSET_OPENGRAPH_ADMIN_ID_DESC" />
			<field name="Opengraph_PageID"
				default=""
				type="text"
				size="30"
				label="COM_EZSET_OPENGRAPH_PAGE_ID"
				description="COM_EZSET_OPENGRAPH_PAGE_ID_DESC" />
			<field name="Opengraph_AppID"
				default=""
				type="text"
				size="30"
				label="COM_EZSET_OPENGRAPH_APP_ID"
				description="COM_EZSET_OPENGRAPH_APP_ID_DESC" />
		</fieldset>

		<fieldset name="like_button">
			<field name="Fb_LikeButton"
				type="radio"
				class="btn-group"
				default="0"
				label="COM_EZSET_FB_LIKE_BUTTON"
				description="COM_EZSET_FB_LIKE_BUTTON_DESC">
				<option value="1">JENABLED</option>
				<option value="0">JDISABLED</option>
			</field>
			<field name="Fb_LikeButton_OnBlogLayout"
				type="radio"
				class="btn-group"
				default="0"
				label="COM_EZSET_FB_LIKE_BUTTON_ON_BLOG"
				description="COM_EZSET_FB_LIKE_BUTTON_ON_BLOG_DESC">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field name="Fb_LikeButton_Position"
				type="radio"
				class="btn-group"
				default="3"
				label="COM_EZSET_FB_LIKE_BUTTON_POSITION"
				description="COM_EZSET_FB_LIKE_BUTTON_POSITION_DESC">
				<option value="1">COM_EZSET_FB_LIKE_BUTTON_POSITION_AFTER_TITLE</option>
				<option value="2">COM_EZSET_FB_LIKE_BUTTON_POSITION_AFTER_CONTENT</option>
				<option value="3">COM_EZSET_FB_LIKE_BUTTON_POSITION_BOTH</option>
			</field>
		</fieldset>
	</fields>

	<fields name="code_insert">
		<fieldset name="code_insert">
			<field name="CodeInsert_Root"
				type="text"
				default="ezset/code"
				label="COM_EZSET_CODE_INSERT_ROOT"
				description="COM_EZSET_CODE_INSERT_ROOT_DESC" />
		</fieldset>

		<fieldset name="custom_code">
			<field name="CustomCode_BeforeTitle"
				type="codemirror"
				filter="raw"
				default=""
				label="COM_EZSET_CUSTOM_CODE_BEFORE_TITLE"
				description="COM_EZSET_CUSTOM_CODE_BEFORE_TITLE_DESC" />
			<field name="CustomCode_AfterTitle"
				type="codemirror"
				filter="raw"
				default=""
				label="COM_EZSET_CUSTOM_CODE_AFTER_TITLE"
				description="COM_EZSET_CUSTOM_CODE_AFTER_TITLE_DESC" />
			<field name="CustomCode_BeforeContent"
				type="codemirror"
				filter="raw"
				default=""
				label="COM_EZSET_CUSTOM_CODE_BEFORE_CONTENT"
				description="COM_EZSET_CUSTOM_CODE_BEFORE_CONTENT_DESC" />
			<field name="CustomCode_AfterContent"
				type="codemirror"
				filter="raw"
				default=""
				label="COM_EZSET_CUSTOM_CODE_AFTER_CONTENT"
				description="COM_EZSET_CUSTOM_CODE_AFTER_CONTENT_DESC" />
			<field type="spacer" hr="true" />
			<field name="CustomCode_OnBlogLayout"
				type="radio"
				class="btn-group"
				default="1"
				label="COM_EZSET_CUSTOM_CODE_ON_BLOG"
				description="COM_EZSET_CUSTOM_CODE_ON_BLOG_DESC">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field name="CustomCode_OnBlogLayout_Max"
				type="text"
				default="3"
				label="COM_EZSET_CUSTOM_CODE_ON_BLOG_MAX"
				description="COM_EZSET_CUSTOM_CODE_ON_BLOG_MAX_DESC" />
		</fieldset>
	</fields>

	<fields name="layout">
		<fieldset name="config">
			<field
				name="Preset_Blog"
				type="ajaxbutton"
				cmd="layout.preset_blog"
				label="COM_EZSET_ARTICLE_LAYOUT_PRESET_BLOG"
				description="COM_EZSET_ARTICLE_LAYOUT_PRESET_BLOG_DESC"
				class=""
				default=""
				/>

			<field
				name="Preset_Simple"
				type="ajaxbutton"
				cmd="layout.preset_simple"
				label="COM_EZSET_ARTICLE_LAYOUT_PRESET_SIMPLE"
				description="COM_EZSET_ARTICLE_LAYOUT_PRESET_SIMPLE_DESC"
				class=""
				default=""
			/>

			<field
				name="Preset_Default"
				type="ajaxbutton"
				cmd="layout.preset_blog"
				label="COM_EZSET_ARTICLE_LAYOUT_PRESET_DEFAULT"
				description="COM_EZSET_ARTICLE_LAYOUT_PRESET_DEFAULT_DESC"
				class=""
				default=""
			/>
		</fieldset>
	</fields>
</form>