<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="basic">
		<fieldset name="setting">
			<field name="Generator"
				type="text"
				label="COM_EZSET_GENERATOR"
				description="COM_EZSET_GENERATOR_DESC" />
			<field
				name="GoogleAnalytics"
				type="text"
				label="COM_EZSET_GOOGLE_ANALYTICS"
				description="COM_EZSET_GOOGLE_ANALYTICS_DESC"
				class=""
				default=""
			/>
		</fieldset>

		<fieldset name="head">
			<field name="InsertHeader"
				type="codemirror"
				filter="raw"
				default=""
				label="COM_EZSET_INSERT_HEADER"
				description="COM_EZSET_INSERT_HEADER_DESC" />
		</fieldset>
	</fields>

	<fields name="security">
		<fieldset name="admin_protect">
			<field
				name="AdminProtect"
				type="list"
				label="COM_EZSET_ADMIN_PROTECT"
				description="COM_EZSET_ADMIN_PROTECT_DESC"
			>
				<option value="">JDISABLED</option>
				<option value="url">COM_EZSET_ADMIN_PROTECT_BY_URL</option>
				<option value="auth">COM_EZSET_ADMIN_PROTECT_BY_HTTP_AUTH</option>
				<option value="auth_user">COM_EZSET_ADMIN_PROTECT_BY_HTTP_AUTH_AND_USER</option>
			</field>

			<field
				name="AdminProtect_Code"
				type="text"
				default="ezset"
				size="30"
				label="COM_EZSET_ADMIN_PROTECT_CODE"
				description="COM_EZSET_ADMIN_PROTECT_CODE_DESC"
			/>
		</fieldset>
		<fieldset name="ip_block">
			<field
				name="IpBlock"
				type="radio"
				label="COM_EZSET_IP_BLOCK"
				description="COM_EZSET_IP_BLOCK_DESC"
				class="btn-group"
				default="0"
			>
				<option value="0">JDISABLED</option>
				<option value="allow">COM_EZSET_IP_BLOCK_ALLOW</option>
				<option value="deny">COM_EZSET_IP_BLOCK_DENY</option>
			</field>

			<field
				name="IpBlock_Client"
				type="checkboxes"
				label="COM_EZSET_IP_BLOCK_CLIENT"
				description="COM_EZSET_IP_BLOCK_CLIENT_DESC"
				class=""
				default="0"
			>
				<option value="site">JSITE</option>
				<option value="administrator">JADMINISTRATOR</option>
			</field>

			<field
				name="IpBlock_Ips"
				type="textarea"
				label="COM_EZSET_IP_BLOCK_IPS"
				description="COM_EZSET_IP_BLOCK_IPS_DESC"
				class="span8"
				rows="7"
				default="localhost"
			/>

		</fieldset>
	</fields>
	<fields name="cache">
		<fieldset name="cache_control">
			<field name="CacheControl"
				type="radio"
				class="btn-group"
				default="0"
				label="COM_EZSET_CACHE_CONTROL_ENABLED"
				description="COM_EZSET_CACHE_CONTROL_ENABLED_DESC">
				<option value="1">JENABLED</option>
				<option value="0">JDISABLED</option>
			</field>
			<field name="CacheControl_Type"
				type="radio"
				class="btn-group"
				default="exclude"
				label="COM_EZSET_CACHE_CONTROL_TYPE"
				description="COM_EZSET_CACHE_CONTROL_TYPE_DESC">
				<option value="exclude">COM_EZSET_CACHE_EXCLUDE</option>
				<option value="include">COM_EZSET_CACHE_INCLUDE</option>
			</field>
			<field name="CacheControl_Menus"
				type="menuitem"
				multiple="true"
				size="15"
				label="COM_EZSET_CACHE_CONTROL_MENUS"
				description="COM_EZSET_CACHE_CONTROL_MENUS_DESC" />
			<field name="CacheControl_Queries"
				type="textarea"
				cols="45"
				rows="8"
				label="COM_EZSET_CACHE_CONTROL_QUERIES"
				description="COM_EZSET_CACHE_CONTROL_QUERIES_DESC" />
		</fieldset>
	</fields>
	<fields name="development">
		<fieldset name="language_orphan">
			<field name="LanguageOrphan"
				type="radio"
				class="btn-group"
				default="0"
				label="COM_EZSET_LANGUAGE_ORPHAN"
				description="COM_EZSET_LANGUAGE_ORPHAN_DESC">
				<option value="1">JENABLED</option>
				<option value="0">JDISABLED</option>
			</field>
			<field name="LanguageOrphan_Path"
				type="text"
				default="logs/languages.ini"
				label="COM_EZSET_LANGUAGE_ORPHAN_PATH"
				description="COM_EZSET_LANGUAGE_ORPHAN_PATH_DESC" />
			<field name="LanguageOrphan_StripPrefixes"
				type="number"
				default="2"
				class="input-small"
				label="COM_EZSET_LANGUAGE_ORPHAN_STRIP_PREFIXES"
				description="COM_EZSET_LANGUAGE_ORPHAN_STRIP_PREFIXES_DESC" />
		</fieldset>
	</fields>

	<fields name="seo">
		<fieldset name="robots">
			<field
				name="Robots"
				cmd="seo.robots"
				type="ajaxbutton"
				label="COM_EZSET_SYSTEM_SEO_ROBOTS"
				description="COM_EZSET_SYSTEM_ROBOTS_DESC"
				class=""
				default=""
			/>
		</fieldset>
	</fields>

	<fields name="config">
		<fieldset name="configuration">
			<field
				name="Sef"
				cmd="config.sef"
				type="ajaxbutton"
				label="COM_EZSET_SYSTEM_CONFIG_SEF"
				description="COM_EZSET_SYSTEM_CONFIG_SEF_DESC"
				class=""
				default=""
				/>

			<field
				name="ListLimit"
				cmd="config.listlimit"
				type="ajaxbutton"
				label="COM_EZSET_SYSTEM_CONFIG_LIST_LIMIT"
				description="COM_EZSET_SYSTEM_CONFIG_LIST_LIMIT_DESC"
				class=""
				default=""
			/>

			<field
				name="LogTemp"
				cmd="config.logtemp"
				type="ajaxbutton"
				label="COM_EZSET_SYSTEM_CONFIG_LOG_TEMP"
				description="COM_EZSET_SYSTEM_CONFIG_LOG_TEMP_DESC"
				class=""
				default=""
			/>

			<field
				name="SessionTime"
				cmd="config.sessiontime"
				type="ajaxbutton"
				label="COM_EZSET_SYSTEM_CONFIG_SESSION_TIME"
				description="COM_EZSET_SYSTEM_CONFIG_SESSION_TIME_DESC"
				class=""
				default=""
			/>

			<field
				name="Timezone"
				cmd="config.timezone"
				type="ajaxtimezone"
				target_selector="#jform_config_Timezone"
				label="COM_EZSET_SYSTEM_CONFIG_TIMEZONE"
				description="COM_EZSET_SYSTEM_CONFIG_TIMEZONE_DESC"
				class=""
				default=""
			>
				<option value="UTC">JLIB_FORM_VALUE_TIMEZONE_UTC</option>
			</field>

		</fieldset>
	</fields>
</form>