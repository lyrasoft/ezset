	<authorEmail>asika@asikart.com</authorEmail>
	<authorUrl>http://asikart.com</authorUrl>
	<version>1.0</version>
	<description>PLG_SYSTEM_EZSET_XML_DESCRIPTION</description>

	<scriptfile>install.php</scriptfile>

	<!-- plugin system now has no sql file
	<install>
    	<sql>
        	<file driver="mysql" charset="utf8">sql/install.sql</file>
  		</sql>
    </install>
	
	
	<uninstall>
    	<sql>
        	<file driver="mysql" charset="utf8">sql/uninstall.sql</file>
  		</sql>
    </uninstall>
	-->

	<files>
		<filename plugin="ezset">ezset.php</filename>
		<filename>index.html</filename>
		<filename>install.php</filename>
		<folder>language</folder>
		<folder>lib</folder>
	</files>

	<config>
		<fields name="params">

			<fieldset name="basic">
				<field name="field1"
					type="text"
					description="Ezset field 1"
					label="Ezset field 1"
					/>
			</fieldset>

			<fieldset name="advanced">
				<field name="include_path"
					type="text"
					label="PLG_SYSTEM_EZSET_INCLUDE_PATH"
					default="easyset"
					/>
			</fieldset>

		</fields>
	</config>

